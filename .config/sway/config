# Display Config

set $laptop eDP-1
bindswitch --reload --locked lid:on output $laptop disable
bindswitch --reload --locked lid:off output $laptop enable

#Gaps
smart_gaps on
gaps inner 5
gaps outer 5

# Remove/Add Titlebar
default_border pixel 5
titlebar_border_thickness 0
titlebar_padding 1
hide_edge_borders smart 

# Volume Control
bindsym $mod+F2 exec pactl set-sink-volume @DEFAULT_SINK@ +5% && notify-send "Volume Increased"
bindsym $mod+F1 exec pactl set-sink-volume @DEFAULT_SINK@ -5% && notify-send "Volume Decreased"


#startup
#exec --no-startup-id copyq
exec blueman-applet
exec --no-startup-id swaync
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id waybar
exec --no-startup-id nm-applet
#exec --no-startup-id kdeconnect-indicator
#exec --no-startup-id thunderbird
#exec --no-startup-id ~/Applications/tutanota-desktop-linux_4e51841f25dac13c7c144a0ef6145ebb.AppImage
exec waypaper --restore

# floating for dialogs
for_window [window_type="dialog"] floating enable
for_window [window_role="dialog"] floating enable
for_window [app_id="onboard"] floating enable
for_window [app_id="ibus-ui-emojier"] floating enable
for_window [app_id="engrampa"] floating enable
for_window [app_id="waypaper"] floating enable
for_window [class="zoom"] floating enable

# make all apps floating
 #for_window [class=".*"] floating enable
 #for_window [app_id=".*"] floating enable
 #for_window [window_role=".*"] floating enable

# Colors
# class                 border  backgr. text    indicator child_border
client.focused          #4c7899 #285577 #ffffff #2e9ef4   #9EB1CF
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       #ffffff

# Workspace layout & Alignment
workspace_layout default
default_orientation horizontal

# Multimedia bindings
bindsym $mod+p exec playerctl play-pause
bindsym $mod+shift+n exec playerctl previous
bindsym $mod+n exec playerctl next

#Multimedia Keys bindings
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

bindsym XF86PowerOff exec "~/.config/rofi/powermenu/powermenu.sh "

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec brightnessctl set 5%+ # increase screen brightness
bindsym XF86MonBrightnessDown exec brightnessctl set 5%- # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous


# Toggle Xwayland
#xwayland disable


# Display Scaling
output eDP-1 {
    scale 1
}

# restart waybar
bindsym Ctrl+Shift+alt+w exec "pkill waybar && waybar

# Open Whatsapp
set $whatsapp "firefox --new-window web.whatsapp.com"
bindsym $mod+shift+w  exec $whatsapp

# Open Notification Panel
bindsym $mod+z exec "swaync-client -op"
bindsym $mod+Shift+z exec "swaync-client -C"

# ibus setup
no_focus [title="im-emoji-picker"]
bindsym $mod+Escape exec "ibus emoji"
include /etc/sway/config.d/*
